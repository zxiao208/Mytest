<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/pay_ys"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:background="#EE3B3B"
                    android:gravity="center"
                    android:text="应收总额"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/mainpay_ys"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_alignTop="@+id/pay_ys"
                    android:layout_toEndOf="@+id/pay_ys"
                    android:layout_toRightOf="@+id/pay_ys"
                    android:background="@drawable/table_shape"
                    android:gravity="center"
                    android:text="10000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pay_ds"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="110dp"
                    android:background="#EE3B3B"
                    android:gravity="center"
                    android:text="代收金额"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_alignTop="@+id/pay_ds"
                    android:layout_toEndOf="@+id/pay_ds"
                    android:layout_toRightOf="@+id/pay_ds"
                    android:background="@drawable/table_shape"
                    android:gravity="center"
                    android:text="10000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pay_yishou"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="180dp"
                    android:background="#EE3B3B"
                    android:gravity="center"
                    android:text="已收金额"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_alignTop="@+id/pay_yishou"
                    android:layout_toEndOf="@+id/pay_yishou"
                    android:layout_toRightOf="@+id/pay_yishou"
                    android:background="@drawable/table_shape"
                    android:gravity="center"
                    android:text="10000"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="支付方式"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="支付金额"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="操作"
                        android:textSize="25sp" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_weight="3"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mainpay_hyinfo"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="会员信息"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pay_hyname"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="持卡人姓名："
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mainpay_hyname"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="张三"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pay_hytype"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:text="卡类别："
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mainpay_hytype"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:text="钻石卡"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pay_hyjifen"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="110dp"
                android:gravity="center"
                android:text="卡积分："
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mainpay_hyjifen"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="110dp"
                android:gravity="center"
                android:text="1000"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="510dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/mainpay_back"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="返回"
                android:textSize="24sp"
                android:background="@drawable/table_shape"
                />
            <Button
                android:id="@+id/mainpay_pay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="支付"
                android:textSize="24sp"
                android:background="@drawable/table_shape"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
